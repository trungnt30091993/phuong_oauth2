---
ip: "192.168.10.10"
memory: 2048
cpus: 2
provider: virtualbox

authorize: ~/.ssh/id_rsa.pub

keys:
    - ~/.ssh/id_rsa

folders:
    - map: ./code
      to: /home/vagrant/code
      type: "nfs"
sites:
    - map: ecommerce.test
      to: /home/vagrant/code/ecommerce/public

databases:
    - ecommerce_db

features:
    - mysql: true
    - mariadb: false
    - postgresql: false
    - ohmyzsh: false
    - webdriver: false

